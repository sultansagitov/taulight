<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="taulight-unit" transaction-type="RESOURCE_LOCAL">
        <class>net.result.sandnode.entity.MemberEntity</class>
        <class>net.result.sandnode.entity.LoginEntity</class>
        <class>net.result.sandnode.entity.KeyStorageEntity</class>
        <class>net.result.sandnode.entity.EncryptedKeyEntity</class>
        <class>net.result.sandnode.entity.FileEntity</class>
        <class>net.result.taulight.entity.TauMemberEntity</class>
        <class>net.result.taulight.entity.ChatEntity</class>
        <class>net.result.taulight.entity.MessageFileEntity</class>
        <class>net.result.taulight.entity.GroupEntity</class>
        <class>net.result.taulight.entity.DialogEntity</class>
        <class>net.result.taulight.entity.InviteCodeEntity</class>
        <class>net.result.taulight.entity.MessageEntity</class>
        <class>net.result.taulight.entity.ReactionPackageEntity</class>
        <class>net.result.taulight.entity.ReactionTypeEntity</class>
        <class>net.result.taulight.entity.ReactionEntryEntity</class>
        <class>net.result.taulight.entity.RoleEntity</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/taulight"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="12345678"/>

            <property name="hibernate.connection.provider_class"
                      value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>
            <property name="hibernate.hikari.maximumPoolSize" value="10"/>
            <property name="hibernate.hikari.idleTimeout" value="300000"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!--<property name="hibernate.show_sql" value="true"/>-->
            <!--<property name="hibernate.format_sql" value="true"/>-->

            <!--<property name="hibernate.use_sql_comments" value="true"/>-->
        </properties>
    </persistence-unit>
</persistence>
